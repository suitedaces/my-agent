{
  "name": "dorabot-desktop",
  "version": "1.0.0",
  "description": "Desktop control center for dorabot",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"sleep 3 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.electron.json --noEmit"
  },
  "dependencies": {
    "@fortune-sheet/react": "^1.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "lucide-react": "^0.563.0",
    "motion": "^12.33.0",
    "pdfjs-dist": "^5.4.296",
    "qrcode.react": "^4.2.0",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-pdf": "^10.3.0",
    "react-resizable-panels": "^4.6.2",
    "react-syntax-highlighter": "^16.1.0",
    "sonner": "^2.0.7",
    "tw-animate-css": "^1.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  }
}
